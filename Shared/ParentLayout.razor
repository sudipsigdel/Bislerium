@inherits LayoutComponentBase

@inject CoffeeServices CoffeeServices
@inject AddinsServices AddinsServices

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <CascadingValue Value="_globalState">
        @Body
    </CascadingValue>
</MudLayout>

@code {
    private GlobalState _globalState = new();

    protected override void OnInitialized()
    {
        CoffeeServices.SeedCoffeeDetails();
        AddinsServices.SeedAddinsDetails();
    }

}