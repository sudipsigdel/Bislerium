@page "/"
@inject NavigationManager NavManager
@using Bislerium.Data

@code{
    [CascadingParameter]
    private GlobalState _globalState { get; set; }
    protected override void OnInitialized()
    {
        NavManager.NavigateTo("/login");

        base.OnInitialized();
    }

    public void logout()
    {
        _globalState.CurrentUser = null;
        NavManager.NavigateTo("/login");
    }
}